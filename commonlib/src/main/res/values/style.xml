<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="theme_noActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>

        <!--窗口操作栏是否显示-->
        <item name="windowActionBar">false</item>
        <!--窗口没有标题-->
        <item name="windowNoTitle">true</item>
        <!--ToolBar菜单文字颜色-->
        <item name="actionMenuTextColor">#111111</item>
    </style>
    <!--************继承了cn.com.jsj.GCTravelTools.mvp.base.BaseActivity的需要在AndroidManifest.xml中使用这个主题************-->
    <style name="JSJ_theme_noActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <!--窗口操作栏是否显示-->
        <item name="windowActionBar">false</item>
        <!--窗口没有标题-->
        <item name="windowNoTitle">true</item>
        <!--设置开关控件的样式-->
        <item name="android:buttonStyleToggle">@android:style/Widget.Button.Toggle</item>
    </style>
    <!--单个activity 去掉过场动画-->
    <style name="JSJ_theme.notAnimation" parent="JSJ_theme_noActionBar">
        <item name="android:windowBackground">@color/common_app_transparency_b100</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/notAnimation</item>
    </style>
    <!--禁止动画-->
    <style name="notAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

</resources>